extend ../layout/main

block append style
    link(rel="stylesheet", href="/css/console.css")

block content
    .console
        form.pure-form.pure-form-stacked.pure-u-1(action="/console", method="post")
            label Query
                textarea.mono.console-input(name="query", rows=15, cols=80)=query
            input.pure-button.pure-button-primary(type="submit", value="Go")
    .result-area
        if error
            div.error
                pre=error
        if result
            - var fields = result.fields;
            - var rows = result.rows;
            .scroll
                table.result-rows.pure-table.pure-table-horizontal.mono
                    thead
                        each field in fields
                            th(title=JSON.stringify(field)) #{field.name}
                    tbody
                        each row in rows
                            tr
                                for value, key in row
                                    td=value
