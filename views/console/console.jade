extend ../layout/main

block content
    form#console.pure-form.pure-form-stacked(action="/console", method="post")
        label Query
            textarea(name="query", rows=15, cols=80)=query
        input.pure-button.pure-button-primary(type="submit", value="Go")
    #rows
        if error
            div.error
                pre=error
        if result
            - var fields = result.fields;
            - var rows = result.rows;
            table.pure-table
                thead
                    each field in fields
                        th(title=JSON.stringify(field)) #{field.name}
                tbody
                    each row in rows
                        tr
                            for value, key in row
                                td=value