- var iconClass = "fa-table"
include ./title    
    
h3 #{columns.length} #{columns.length === 1 ? "Column" : "Columns"}
.scroll    
    table.pure-table.mono 
        thead
            tr
                th Name
                th Type
                //- th Default
                th Constraints
        tbody
            each column in columns
                tr
                    td: strong=column.name
                    td=column.type
                    //- td=column.default
                    td
                        if column.primarykey
                            span.fa.fa-key(title="Primary Key")
                            |  
                        if column.uniquekey
                            span.fa(title="Unique", style="font-size: 19px; line-height: 0px") &#x2744;
                            |  
                        if column.notnull
                            span.fa.fa-dot-circle-o(title="Not Null")
                            |  
                        if column.foreignkey
                            span.fa.fa-external-link(title="Foreign Key")
                
include ./sample
